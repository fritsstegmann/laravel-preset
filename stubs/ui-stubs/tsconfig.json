{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "skipLibCheck": true
    },
    "include": [
        "resources/ts/**/*"
    ],
    "exclude": [
        "node_modules",
        "vendor"
    ]
}
