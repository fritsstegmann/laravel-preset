{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "types": [
            "vue-rx/types/index",
            "vue/types/index"
        ]
    },
    "include": [
        "resources/ts/**/*"
    ],
    "exclude": [
        "node_modules",
        "vendor"
    ]
}
